{
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "singleQuote": true,
        "printWidth": 100,
        "semi": true,
        "arrowParens": "always"
      }
    ],
    "eqeqeq": ["error", "always"]
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  }
}
