<label class="input-toggle" title="<%= input.text %>" aria-label="<%= input.text %>">
  <input 
    tabindex="0" 
    type="checkbox" 
    name="<%= input.name %>"
    data-state="is-pristine" 
    onfocus="dirty(event)"
    onblur="validate(event)"
    <% if (input.required == true) { %>
      required
    <% } %>
  >
  <span class="input-toggle-slider"><%= input.text %></span>
  <span class="input-toggle-label">
    <span class="input-toggle-label-yes">
      Yes
    </span>
    <span class="input-toggle-label-no">
      No
    </span>
  </span>
  <div 
    class="input-validation-message"
    <% if (input.required == true) { %>
      data-message-error-required="<%= input.message.error.required %>"
    <% } %>
    data-message-error-invalid="<%= input.message.error.invalid %>"
  ></div>
</label>